class Monitor:
    @property
    def name(self) -> str: ...
    @property
    def size(self) -> tuple[int, int]: ...
    @property
    def position(self) -> tuple[int, int]: ...
    @property
    def scale_factor(self) -> float: ...
    @property
    def refresh_rate_millihertz(self) -> int | None: ...
    @property
    def handle(self) -> int: ...

    def set_primary(self) -> None: ...


