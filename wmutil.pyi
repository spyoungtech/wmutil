def get_window_monitor(hwnd: int) -> Monitor: ...
def enumerate_monitors() -> list[Monitor]: ...
def get_monitor_from_point(x: int, y: int) -> Monitor: ...

def set_primary_monitor(display_name: str) -> None: ...